<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxy.sceneryshare.dao.RankMapper">
    <resultMap id="BaseResultMap" type="com.lxy.sceneryshare.domain.Rank" >
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="sceneryshare_id" property="sceneryshareId" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="BaseColumnList">
        id,user_id,sceneryshare_id
    </sql>

    <insert id="insert" parameterType="com.lxy.sceneryshare.domain.Comment">
        insert into rank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="sceneryshareId != null">
                sceneryshare_id,
            </if>
        </trim>
        <trim prefix=" values (" suffix=")" prefixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="sceneryshareId != null">
                #{sceneryshareId},
            </if>
        </trim>
    </insert>

    <select id="getMark" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        select
        <include refid="BaseColumnList"/>
        from comment
        where user_id = #{userId}
        and sceneryshare_id = #{sceneryshareId}
    </select>

    <select id="getBySceneryshareId" parameterType="java.lang.Integer" resultMap="java.lang.Float">
        select CAST(AVG( score ) as decimal(2,2))
        from comment
        where sceneryshare_id = #{sceneryshareId}
    </select>

</mapper>